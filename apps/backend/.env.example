# Server
SERVER_PORT=8080
SERVER_READ_TIMEOUT=30
SERVER_WRITE_TIMEOUT=30
SERVER_IDLE_TIMEOUT=120
SERVER_CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Primary
PRIMARY_ENV=development

# Database
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=app
DATABASE_PASSWORD=app
DATABASE_NAME=app
DATABASE_SSL_MODE=disable
DATABASE_MAX_OPEN_CONNS=25
DATABASE_MAX_IDLE_CONNS=5
DATABASE_CONN_MAX_LIFETIME=300
DATABASE_CONN_MAX_IDLE_TIME=60

# Redis
REDIS_ADDRESS=localhost:6379

# Auth
AUTH_SECRET_KEY=your-secret-key-here

# Integration (Resend Email)
INTEGRATION_RESEND_API_KEY=

# Observability
OBSERVABILITY_NEWRELIC_LICENSE_KEY=
OBSERVABILITY_NEWRELIC_APP_NAME=go-boilerplate
OBSERVABILITY_SERVICE_NAME=go-boilerplate
OBSERVABILITY_ENVIRONMENT=development

# S3 (Cloudflare R2)
S3_ENDPOINT=https://2b9f24c20c096b7c6eb79f881d39dc38.r2.cloudflarestorage.com
S3_BUCKET=boilerplate-og
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_REGION=auto
S3_FORCE_PATH_STYLE=true

# Backups
BACKUP_CRON=0 */6 * * *
BACKUP_RETENTION_DAYS=14

# DSPY (Azure)
DSPY_ENABLED=true
DSPY_PROVIDER=azure
DSPY_AZURE_ENDPOINT=https://go-boilerplate-resource.services.ai.azure.com/api/projects/go-boilerplate
DSPY_AZURE_API_KEY=
DSPY_MODEL=gpt-4o-mini
